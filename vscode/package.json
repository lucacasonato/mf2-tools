{
  "name": "vscode-mf2",
  "displayName": "MessageFormat 2",
  "description": "MessageFormat 2 support for Visual Studio Code",
  "license": "GPL-3.0-or-later",
  "version": "0.0.3",
  "scripts": {
    "vscode:prepublish": "rm -rf ./dist && cp -r ../target/wasm/release ./dist && mv ./dist/mf2lsp.generated.js ./dist/mf2lsp.generated.mjs",
    "publish": "npx @vscode/vsce publish",
    "check": "tsc"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lucacasonato/mf2-language-server"
  },
  "publisher": "nicolo-ribaudo",
  "type": "module",
  "main": "./src/main.cjs",
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "@deno/shim-deno": "0.19.2"
  },
  "devDependencies": {
    "@types/vscode": "1.90.0",
    "@types/node": "^20.14.9",
    "typescript": "^5.5"
  },
  "contributes": {
    "languages": [
      {
        "id": "mf2",
        "aliases": [
          "MessageFormat 2",
          "mf2"
        ],
        "extensions": [
          ".mf2"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mf2",
        "scopeName": "source.mf2",
        "path": "./syntaxes/mf2.tmLanguage.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.js.jsx",
          "source.tsx",
          "source.vue",
          "source.svelte",
          "source.astro",
          "text.html.markdown",
          "text.html.derivative"
        ],
        "scopeName": "inline.mf2",
        "path": "./syntaxes/mf2.js.json",
        "embeddedLanguages": {
          "meta.embedded.block.mf2": "mf2"
        }
      }
    ],
    "commands": [
      {
        "command": "mf2.restart",
        "title": "Restart Language Server",
        "category": "MessageFormat 2"
      }
    ],
    "configuration": {
      "title": "MessageFormat 2",
      "properties": {
        "mf2.server.path": {
          "title": "Path",
          "type": "string",
          "description": "The path to the MessageFormat 2 language server. Can either be a path to a binary (native build), or a .mjs file (Wasm build).",
          "scope": "machine-overridable"
        }
      }
    }
  }
}
